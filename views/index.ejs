<!DOCTYPE html>
<html>
<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#">

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">

  <title>chattify - be connected simply</title>

  <!-- stylesheets -->
  <%- include("./_share/stylesheets.ejs"); %> 

  <!-- ogp common settings -->
  <%- include("./_share/ogp.ejs"); %>

  <!-- favicon -->
  <link rel="icon" href="favicon.png">
  
</head>
<body>

  <!-- header -->
  <%- include("./_layouts/header.ejs"); %>
  
  <!-- main contents -->
  <div class="main">
    <div class="main-top">
      <h2 class="main-top__catch-copy">
        Get Connected - Very Simply!
       </h2>
      <p class="main-top__desc">-- chat app for new generations --</p>
      <ul class="feature-list">
        <li class="feature-list__feature">Easy To Start</li>
        <li class="feature-list__feature">No User Registration</li>
        <li class="feature-list__feature">Exprires In A Day</li>
      </ul>
    </div>
    <div class="main-bottom">
      <div class="form-container">
        <form id="group-new" class="group-new" action="#" method="post">
          <div class="group-new__label">Group Name</div>
          <input class="group-new__input-box" type="text" name="group-name" placeholder="Please input group-name">
          <div class="group-new__label">Keywords</div>
          <input class="group-new__input-box" type="text" name="keywords" placeholder="Please input keywords(optional)">
          <div class="group-new__btn">
            Create Chattify
          </div>
        </form>
    </div>
    </div>
  </div>

  <!-- footer -->
  <%- include("./_layouts/footer.ejs"); %>

